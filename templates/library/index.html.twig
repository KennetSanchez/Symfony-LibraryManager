{% extends 'base.html.twig' %}

{% block title %}Bibliotecas{% endblock %}

{% block body %}
    <div class="container">

        <div style="width: 300px;">
            {{ form(form) }}
        </div>


        <div class="album py-5 bg-body-tertiary">
            <div class="container">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    {% for library in libraries %}
                        <!-- Item nº1 -->
                        <div class="col">
                            <div class="card shadow-sm">
                                <div class="card-body">
                                    <h3>{{ library.name }}</h3>
                                    <small class="text-body-secondary">Dirección: {{ library.address }}</small>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <a href="/library/{{library.id}}" class="btn btn-sm btn-outline-secondary" style="margin-top: 20px;">Ver</a>
                                        </div>
                                        <small class="text-body-secondary">Horario: {{ library.openTime | date('H:i') }}H - {{ library.closeTime | date('H:i') }}H</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
