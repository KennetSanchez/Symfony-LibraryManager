{% extends 'base.html.twig' %}

{% block title %}Library{% endblock %}

{% block body %}
    <div class="container">
        <h1>Library</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ library.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ library.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ library.address }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ library.city }}</td>
            </tr>
            <tr>
                <th>OpenTime</th>
                <td>{{ library.openTime ? library.openTime|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CloseTime</th>
                <td>{{ library.closeTime ? library.closeTime|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>FoundationDate</th>
                <td>{{ library.foundationDate ? library.foundationDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>LibraryRules</th>
                <td>{{ library.libraryRules }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('indexAdminLibraries') }}" class="btn btn-secondary">Volver al listado</a>

        <a href="{{ path('editLibrary', {'id': library.id}) }}" class="btn btn-warning">Editar</a>

        {{ include('admin/admin-library/_delete_form.html.twig') }}
    </div>
{% endblock %}
