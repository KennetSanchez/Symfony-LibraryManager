{% extends 'base.html.twig' %}

{% block title %}Gesti√≥n Bibliotecas{% endblock %}

{% block body %}

        <h1>Listado de bibliotecas</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>City</th>
                <th>OpenTime</th>
                <th>CloseTime</th>
                <th>FoundationDate</th>
                <th>LibraryRules</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for library in libraries %}
                <tr>
                    <td>{{ library.id }}</td>
                    <td>{{ library.name }}</td>
                    <td>{{ library.address }}</td>
                    <td>{{ library.city }}</td>
                    <td>{{ library.openTime ? library.openTime|date('H:i:s') : '' }}</td>
                    <td>{{ library.closeTime ? library.closeTime|date('H:i:s') : '' }}</td>
                    <td>{{ library.foundationDate ? library.foundationDate|date('Y-m-d') : '' }}</td>
                    <td>{{ library.libraryRules }}</td>
                    <td>
                        <a href="{{ path('app_library_show', {'id': library.id}) }}" class="btn btn-primary">Mostrar</a>
                        <a href="{{ path('app_library_edit', {'id': library.id}) }}" class="btn btn-warning">Editar</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_library_new') }}" class="btn btn-success">Nuevo registro</a>

{% endblock %}
